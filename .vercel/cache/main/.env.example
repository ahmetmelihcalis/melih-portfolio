EMAIL_USER=your_email@example.com           # Email address used to send messages
EMAIL_PASS=your_email_password_or_app_password # Password or App Password for the sending email
EMAIL_HOST=smtp.example.com                 # SMTP host for your email provider (e.g., smtp.gmail.com)
EMAIL_PORT=587                              # SMTP port (e.g., 587 for TLS, 465 for SSL)
EMAIL_SECURE=false                          # true if port is 465, false if port is 587
TARGET_EMAIL=recipient_email@example.com    # The email address where contact form messages will be sent